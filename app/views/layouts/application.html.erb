<!DOCTYPE html>
<html>
<head>
  <title><%= @title ? "PinsToPaper | #{@title}" : 'PinsToPaper' %></title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="main">
    <div class="pure-g">

      <% unless flash.empty? %>
        <div class="pure-u-1-4"></div>
        <div class="pure-u-1-2 flash-messages">
          <% flash.each do |name, msg| %>
            <%= content_tag :div, msg, :class => "flash-#{name}" %>
          <% end %>
        </div>
        <div class="pure-u-1-4"></div>
      <% end %>

      <div class="pure-u-1">
        <%= yield %>
      </div>
    </div>
  </div>

</body>
</html>
